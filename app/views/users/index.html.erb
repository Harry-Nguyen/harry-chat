<div class="col-sm-6">
<h1>User List</h1>
<% i = 0 %>
  <table>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
<% @users.each do |u| %>
  <% i += 1 %>
    <tr>
      <td><%= i %></td>
      <td><%= u.name %></td>
      <td><%= u.email %></td>
      <td>
        <% if u.id != session[:user_id] %>
          <%= form_tag add_friend_path, class: "add-friend-form" do %>
            <%= text_field_tag :friend_id, u.id %>
            <%= submit_tag 'Add friend', class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </td>
    </tr>
<% end %>
  </table> 
</div>